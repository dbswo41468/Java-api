<body>
	<h3>사용자 페이지 입니다</h3>
	<input id='d_userId'  type="text" placeholder="아이디를 입력해주세요"/>
	<button type="button" onclick="doDelete()">삭제</button>
	
	<table id="users">
	  <tr>
	    <th>아이디</th>
	    <th>비밀번호</th>
	    <th>이름</th>
	  </tr>
	</table>

</body>
<script
	src="https://code.jquery.com/jquery-3.6.1.js"
	   integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI="
	   crossorigin="anonymous"></script>
	   
	   
<script type="text/javascript">

	function callMyAPI(){ 
		
		// ajax : 백엔드와 프론트가 통신하는 기능!
		// type : GET == Controller에 GetMapping
		// dataType : return 데이터를 json으로 받음
		var s = [];
		      $.ajax({ 
	    	  url: '/api/v1/users',
	    	  type : 'GET', 
	    	  dataType : 'json',
	    	  success : function (response){
	    		  console.log(response);
	    		  for(var i in response){
	    			tr = $('<tr></tr>');
	
	    			empno = $('<td>'+response[i].empno+'</td>');
	    			ename = $('<td>'+response[i].ename+'</td>');
	    			job = $('<td>'+response[i].job+'</td>');
	    			sal = $('<td>'+response[i].sal+'</td>');
	    			hiredate = $('<td>'+response[i].hiredate+'</td>');
	    			
	    			tr.append(empno);
	    			tr.append(ename);
	    			tr.append(job);
	    			tr.append(sal);
	    			tr.append(hiredate);	
	    			
	    			$("#emp").append(tr);
	    	  	  }	
	    	  }
	      });
	}




	
	function doDelete(){
		
		var did = $('#d_userId').val();

			
			$.ajax({
	 	        url: '/api/v1/users/'+did,
	 	        type : 'DELETE',
	 	        dataType: 'json',
	 		    success: function (response) {
	 		        	alert("삭제");
	 		        	location.reload(); // 강제 새로고침
	 		        }
	         });
		}
	
</script>


</html>