<script>
	
function doUsers(data){
	console.log(data);
 // 아작스 호출
    $.ajax({
        url: '/api/v1/users',
        type : 'POST',
        contentType : 'application/json', // 서버에 json 타입으로 보낼 예정 (요청)
        data : JSON.stringify(data),
        dataType: 'json',
	    success: function (response) {
	        	console.log(response);
	        }
    });

}
	
</script>
	   
	   
<script type="text/javascript">
	

	function doJoin(){
		var id = $('#userId').val();
		var na = $('#userName').val();
		var pw = $('#userPw').val();
		// 자바스크립트를 이용해 빈칸 체크하기
		
		
		let arr = [id,na,pw];
		const ARR = ["아이디","이름","비밀번호"];
		
		for(var i in arr){
			if(arr[i] == ''){
				alert(ARR[i] + "를 입력해주세요");
				return;
			}
		}
		
		var jsonData = {
				"id" : id,
				"name" : na,
				"pw" : pw

			};
			
			$.ajax({
			        url: '/api/v1/users',
			        type : 'POST',
			        contentType : 'application/json', // 서버에 json 타입으로 보낼 예정 (요청)
			        data : JSON.stringify(jsonData),
			        dataType: 'json',
				    success: function (response) {
				        	console.log(response); 
				        	alert("추가 완료");
				        	location.reload(); // 강제 새로고침
				        }
		     });
	}
	
	function doDelete(){
		
		var did = $('#d_userId').val();
		var dna = $('#d_userName').val();
		var dpw = $('#d_success').val();
			
			$.ajax({
	 	        url: '/api/v1/users/'+id,
	 	        type : 'DELETE',
	 	        dataType: 'json',
	 		    success: function (response) {
	 		        	alert("삭제");
	 		        	location.reload(); // 강제 새로고침
	 		        }
	         });
		}
	
</script>


